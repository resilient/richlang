<% unless devise_error_messages!.empty? %>
	<div class="alert alert-error">
	  <%= devise_error_messages! %>
	</div>
<% end %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }) do |f| %>

  <h2 class="form-signin-heading">Реєстрація</h2>

  <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "input-block-level" %>

  <%= f.text_field :name, placeholder: "Ім'я", class: "input-block-level" %>

  <%= f.password_field :password, placeholder: "Пароль", class: "input-block-level" %>

  <%= f.password_field :password_confirmation, placeholder: "Підтвердження паролю", class: "input-block-level" %>

  <%= f.submit "Зареєтруватися", class: "btn btn-large" %>

  <!--<p><%#= render "devise/shared/links" %></p>-->
<% end %>

