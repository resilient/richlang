<% unless devise_error_messages!.empty? %>
	<div class="alert alert-error">
	  <%= devise_error_messages! %>
	</div>
<% end %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }) do |f| %>

  <h2 class="form-signin-heading"><%= t('.registration') %></h2>

  <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "input-block-level" %>

  <%= f.text_field :name, placeholder: t('.name'), class: "input-block-level" %>

  <%= f.password_field :password, placeholder: t('.password'), class: "input-block-level" %>

  <%= f.password_field :password_confirmation, placeholder: t('.password_confirmation'), class: "input-block-level" %>

  <%= f.submit t('.register'), class: "btn btn-large" %>

<% end %>

