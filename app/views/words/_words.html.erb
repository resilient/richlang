<% if @words.size > 0 %>
  <table class="table">
    <tbody>
    <% @words.each do |word| %>
      <tr>
        <td>
          <%= link_to word.word, word %>
        </td>
        <td>
          <%= link_to word.translation, word %>
        </td>
        <td>
          <%= image_tag word.image_url(:small_thumb), class: "img-polaroid" if word.image? %>
        </td>
        <td> <p class="text-right"><%= link_to t('.delete'), word, confirm: t('.are_you_sure'), id: "delete_link", method: :delete %></p></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p class="not_found"><%= t('.not_found', word: @search_word) %></p>
<% end %>